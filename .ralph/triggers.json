{
  "version": "1.0",
  "triggers": [
    {
      "name": "auto-prisma-migration",
      "event": "file_change",
      "pattern": "packages/backend/prisma/schema.prisma",
      "debounce": 2000,
      "action": "ralph run wms-prisma-workflow --auto",
      "enabled": true
    },
    {
      "name": "auto-quality-check",
      "event": "file_save",
      "pattern": "packages/backend/src/**/*.ts",
      "debounce": 5000,
      "action": "ralph run wms-code-quality-check --projectPath=./packages/backend",
      "enabled": true,
      "notifyOnError": true
    },
    {
      "name": "auto-api-sync",
      "event": "controller_change",
      "pattern": "packages/backend/src/**/*Controller.ts",
      "action": "ralph run wms-api-contract-validator",
      "enabled": true
    },
    {
      "name": "auto-warehouse-opt",
      "event": "inventory_change",
      "pattern": "packages/backend/src/entities/inventory*.ts",
      "action": "ralph run wms-warehouse-optimizer --analyze=true",
      "enabled": false
    }
  ],
  "schedules": [
    {
      "name": "nightly-quality-audit",
      "cron": "0 2 * * *",
      "action": "ralph run wms-code-quality-check --fixIssues=true --generateReport=true",
      "enabled": true
    },
    {
      "name": "weekly-security-scan",
      "cron": "0 3 * * 0",
      "action": "ralph run wms-full-feature-workflow --securityOnly=true --deepScan=true",
      "enabled": true
    },
    {
      "name": "daily-warehouse-analysis",
      "cron": "0 6 * * *",
      "action": "ralph run wms-warehouse-optimizer --fullAnalysis=true",
      "enabled": true
    }
  ]
}
